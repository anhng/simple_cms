<% if !flash[:notice].blank? %>
	<div class="notice">
			<%= flash[:notice] %>
	</div>
<% end %>


<div class="section index">
  <h2>Pages</h2>

  <%= link_to("Add New Section", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Section list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Page ID</th>
      <th>Section</th>
      <th>Content Type</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>

    <% @sections.each do |section| %>

    <tr>
      <td><%= section.position %></td>
      <td><%= section.page_id %></td>
      <td><%= section.name %></td>
      <td><%= section.content_type %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
