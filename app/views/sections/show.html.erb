<% if !flash[:notice].blank? %>
	<div class="notice">
			<%= flash[:notice] %>
	</div>
<% end %>



<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="sections show">
  <h2>Show Section</h2>

  <table summary="Section detail view">
    
    <tr>
      <th>Section ID</th>
      <td><%= @section.page_id %></td>
    </tr>
	<tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
	
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @page.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @page.content %></td>
    </tr>
  </table>

</div>
