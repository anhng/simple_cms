<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="pages edit">
  <h2>Update Page</h2>

  <%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>

    <table summary="Page form fields">
	  

	  <tr>
	     <th>Subject ID</th>
	     <td><%= f.text_field(:subject_id) %></td>
	  </tr>	
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>

      <tr>
        <th>Section</th>
        <td><%= f.text_field(:section) %></td>
      </tr>

      <tr>
        <th>Content</th>
        <td><%= f.text_field(:content) %></td>
      </tr>

    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Section") %>
    </div>

  <% end %>
</div>
